        <sub name=_('Radial Array')_ tool_tip=_('Define diameter or distance between groups')_ icon="circular-array.png" src="circular-array.cfg"/>
        <sub name=_('Rectangular Array')_ tool_tip=_('Array of rows and columns')_ icon="rect-array.png" src="rectangular-array.cfg"/>
    </group>
    <sub name=_('Change Tool')_ tool_tip=_('Select end mill or drill and set parameters')_ icon="tool-change.png" src="mill/tool-change.cfg"/>
