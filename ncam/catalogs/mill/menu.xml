			<sub name=_('Mirror Polyline')_ tool_tip=_('Create a reversed polyline from previous one')_ icon="polyline-mirrored.png" src="mill/polyline-mirror-p.cfg"/>
		</group>
		<group name=_('Counterbore')_ tool_tip=_('For Socket Head Cap Screw')_ icon='counterbore.png' >
	        <sub name=_('Single Hole')_ tool_tip=_('No slot')_ icon="shcs-hole.png" src="mill/SHCS.cfg"/>
	        <sub name=_('Slot From 1 Point')_ tool_tip=_('Define a point, angle and length')_ icon="shcs-slot.png" src="mill/SHCS_slot.cfg"/>
	        <sub name=_('Slot From 2 Points')_ tool_tip=_('Define 2 points')_ icon="shcs-slot2.png" src="mill/SHCS_slot2.cfg"/>
	        <sub name=_('Radial Slot')_ tool_tip=_('Create a radial slot')_ icon="shcs-arc.png" src="mill/SHCS_slot-arc.cfg"/>
	    </group>
		<sub name=_('Thread Milling')_ tool_tip=_('True thread mill needed')_ icon="threading-v.png" src="mill/thread-milling.cfg"/>
    </group>
    <group name=_('Drilling')_ icon="drills.png">
        <sub name=_('Single Hole')_ tool_tip=_('Drill a single hole')_ icon="drill-single.png" src="mill/drill-single.cfg"/>
