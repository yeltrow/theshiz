        <sub name=_('Surface Finishing')_ tool_tip=_('Uni or Bi-directional')_ icon="rect-pocket.png" src="mill/surf_finish.cfg"/>
    </group>
    <group name=_('Advanced')_ icon='advanced.png'>
		<group name=_('Polyline')_ icon="polyline.png">
			<sub name=_('Start')_ tool_tip=_('Starts a polyline')_ icon="polyline.png" src="mill/polyline.cfg"/>
			<separator/>
			<sub name=_('Line To')_ tool_tip=_('Relative or absolute position')_ icon="line-to.png" src="mill/polyline-to.cfg"/>
			<sub name=_('Line Polar')_ tool_tip=_('Define angle and length')_ icon="line-polar.png" src="mill/polyline-polar.cfg"/>
			<separator/>
			<sub name=_('Arc I,J')_ tool_tip=_('Defined center by offsets or absolute position')_ icon="arc-to-ij.png" src="mill/polyline-arc-ij.cfg"/>
			<sub name=_('Arc Polar Center')_ tool_tip=_('Define center at angle and distance')_ icon="arc-polar-ctr.png" src="mill/polyline-arc-polar.cfg"/>
