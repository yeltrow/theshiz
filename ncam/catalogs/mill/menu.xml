		<sub name=_('Comment')_ tool_tip=_('Add comments')_ icon="comment.png" src="comment.cfg"/>
        <sub name=_('Change Units')_ tool_tip=_('Temporarily change units')_ icon="mm2in.png" src="change-units.cfg"/>
