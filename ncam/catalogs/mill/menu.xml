		<sub name=_('Probe Edges')_ tool_tip=_('Find workpiece edges')_ icon="probe.png" src="mill/probe-edge.cfg"/>
		<sub name=_('Probe Stock')_ tool_tip=_('Find the center of a cube or cylinder')_ icon="probe.png" src="mill/probe-stock.cfg"/>
		<sub name=_('Probe Array')_ tool_tip=_('Probe a array of points and save to file')_ icon="probe-grid.png" src="mill/probe-array.cfg"/>
