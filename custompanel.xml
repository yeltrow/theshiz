<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
         <vbox>
         <relief>RIDGE</relief>         
         <bd>6</bd>
                <label>
                        <text>"Spindle Speed:"</text>
                        <font>("Helvetica",20)</font>
                </label>
                <bar>
                        <halpin>"spindle-speed"</halpin>
                        <max_>5700</max_>
                </bar>
                <hbox>
                    <label>
                            <text>"             "</text>
                            <font>("Helvetica",20)</font>
                    </label>
                </hbox>
                <hbox>
                <label>
                    <text>"Control Panel Heartbeat:"</text>
                    <font>("Helvetica",12)</font>
                </label>
                <led>
                    <halpin>"heartbeat-indicator-led"</halpin> 
                    <size>30</size> 
                    <on_color>"green"</on_color>
                    <off_color>"red"</off_color>
                </led>
                </hbox>
                <scale>
		    <font>("Helvetica",16)</font>
		    <width>"25"</width>
		    <halpin>"spindle-setting"</halpin>
		    <resolution>0.1</resolution>
		    <orient>HORIZONTAL</orient>
		    <initval>-15</initval>
		    <min_>0</min_>
		    <max_>5700</max_>
		</scale>
                <scale>
		    <font>("Helvetica",16)</font>
		    <width>"25"</width>
		    <halpin>"variator-setting"</halpin>
		    <resolution>1</resolution>
		    <orient>HORIZONTAL</orient>
		    <initval>1900</initval>
		    <min_>75</min_>
		    <max_>3800</max_>
		</scale>
        </vbox>
	<vbox>
	   
        </vbox>
        <hbox>
                <label>
                        <text>"Tool Now "</text>
                        <font>("Helvetica",14)</font>
                </label>
                <s32>
                        <halpin>"tool-now"</halpin>
                        <font>("Helvetica",14)</font>
                </s32>
        </hbox>
        <hbox>

                <button>
                        <halpin>"force-tool-change"</halpin>
                        <text>"CHANGE TO TOOL"</text>
                        <font>("Helvetica",14)</font>
                </button>
                <spinbox>
                        <halpin>"tool-number"</halpin>
                        <min_>0</min_>
                        <max_>54</max_>
                        <initval>0</initval>
                        <increment>1</increment>
                        <format>"2.0f"</format>
                        <justify>CENTER</justify>
                        <font>("Helvetica",14)</font>
                        <width>2</width>
                </spinbox>
        </hbox>

        
</pyvcp>
